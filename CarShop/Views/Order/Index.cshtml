@using DataAccsess.Entities
@model List<Order>

<div class="container">
    <div class="row">
        @if (Model.Any())
    {
        <ol class="list-group list-group-numbered col-6">
            @foreach (var order in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">OrderNumber: @order.Id</div>
                            @order.OrderDate
                        </div>
                        <span class="badge bg-primary rounded-pill">@order.TotalPrice</span>
                    </li>
                }
            
            </ol>
        }
        else
        {
                <h4>Orders not  founded....</h4>
    }
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary"> Continue Shopping <i class="bi bi-arrow-right-circle"></i> </a>
    </div>

</div>
